%wrapper
  %div.chat-main
    %div.main-header
      %div.main-header__left-box
        %h2.main-header__left-box__current-group
          CURRENT GROUP
        %ul.main-header__left-box__menber-list
          MENBER :
          %li.main-header__left-box__menber-list__menber
            menber1
      %a{href: '#'}
        %div.main-header__edit-btn Edit
        
    %div.messages
      %div.message
        %div.message__upper-info
          %p.message__upper-info__talker USER NAME
          %p.message__upper-info__date 0000/00/00(Wed) 00:00:00
        %p.message__text USER MESSAGE
    %div.form
      %form.new__message
        %div.input-box
          %input.input-box__text{:type => 'text', :value => '', :name => 'message[content]', :placeholder => 'type a message'}
          %label{class: "input-box__image"}
            %i.fa.fa-image
            %input{type: "file"}
              
        %input.submit-btn{:type => 'submit', :value => 'Send', :name => 'commit'}